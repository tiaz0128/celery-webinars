    "version": "0.2.0",
    "configurations": [
        {
            "name": "Celery Worker",
            "type": "debugpy",
            "request": "launch",
            "module": "celery",
            "args": [
                "-A",
                "run",
                "worker",
                "-Q",
                "scheduler_queue,task_queue,db_select",
                "--loglevel=info",
                "--logfile=./logs/celery_worker.log"],
        },        
        {
            "name": "Celery Beat",
            "type": "debugpy",
            "request": "launch",
            "module": "celery",
            "args": [
                "-A",
                "run",
                "beat",
                "--loglevel=info",
                "--logfile=./logs/celery_beat.log"],
        }
    ]
}